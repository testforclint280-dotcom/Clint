{
  "namespace": "wolf_pause",
  "pause_screen@common.base_screen": {
    "controls": [
      {
        "main_panel": {
          "type": "panel",
          "controls": [
            {
              "button_stack": {
                "type": "stack_panel",
                "anchor_from": "center",
                "anchor_to": "center",
                "size": [ 150, "100%" ],
                "offset": [ 0, 20 ],
                "controls": [
                  { "resume@pause.resume_button": { "size": [ 150, 20 ] } },
                  { "filler_1": { "type": "panel", "size": [ 150, 4 ] } },
                  { "settings@pause.settings_button": { "size": [ 150, 20 ] } },
                  { "filler_2": { "type": "panel", "size": [ 150, 4 ] } },
                  /* --- WOLF CLIENT BUTTON --- */
                  {
                    "wolf_nav_panel": {
                      "type": "panel",
                      "size": [ 150, 20 ],
                      "controls": [
                        {
                          "wolf_settings_button@common.button": {
                            "size": [ 150, 20 ],
                            "$button_text": "Wolf Client Settings",
                            "layer": 20,
                            "always_handle_pointer": true,
                            "consume_event": true,
                            "on_click": {
                              "scripts": [ "$wolf_menu_test = !($wolf_menu_test);" ]
                            }
                          }
                        }
                      ]
                    }
                  },
                  { "filler_3": { "type": "panel", "size": [ 150, 4 ] } },
                  { "quit@pause.quit_button": { "size": [ 150, 20 ] } }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}